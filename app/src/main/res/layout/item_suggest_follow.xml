<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="1dp"
    app:cardBackgroundColor="@color/color_border_suggest_follow"
    app:cardCornerRadius="8dp">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/backgroun_suggest_follow"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image_user"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_user" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_check"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="left"
                    android:layout_marginBottom="-8dp"
                    android:src="@drawable/icon_checked" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="right"
                    android:text="نیما حیدری  "
                    android:textColor="@color/colorblack"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/tv_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="بیو"
                android:textColor="@color/colorblack"
                android:textSize="12dp" />

            <TextView
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="یوزرنیم"
                android:textColor="@color/colorblack"
                android:textSize="14dp" />


            <LinearLayout
                android:id="@+id/linear_follow_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:animateLayoutChanges="true">


                <Button
                    android:id="@+id/btn_followed"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"
                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/backgrand_followed"
                    android:gravity="center"
                    android:paddingHorizontal="24dp"
                    android:text="دنبال کرده اید"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_followering"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="16dp"

                    android:layout_weight="1"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/backgrand_followering"
                    android:gravity="center"
                    android:paddingHorizontal="24dp"
                    android:text="دنبال کنید"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>